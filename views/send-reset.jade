extends layout

block content
  form(method='POST' onSubmit={resetPassword})
    legend Reset Password
    .form-group
      label(for='password') New Password
      input.form-control(type='password', name='password', value='', placeholder='New password', autofocus=true)
    .form-group
      label(for='retype-password') Confirm Password
      input.form-control(type='password', name='retype-password', value='', placeholder='Confirm password')
    .form-group
      button.btn.btn-primary(type='submit') Update Password